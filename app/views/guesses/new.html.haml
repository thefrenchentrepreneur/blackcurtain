#fb-root
%script(type='text/javascript')
  (function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) {return;}
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=121871154591526";
  fjs.parentNode.insertBefore(js, fjs);
  } (document, 'script', 'facebook-jssdk'));

#main
  = render :partial => 'app_name'
  %p Guess the correct letter to get early access to the website before it launches!
  = form_for @guess, :url => { :controller => 'guesses', :action => 'create' } do |f|
    %p
      = f.label :letter
      = f.text_field :letter, :maxlength => 1
    %p
      = f.label :email
      = f.text_field :email, :maxlength => 30
    %p.submit
      %label submit 
      = f.submit 'Submit'
%aside
  %h2 The top 3 guesses are...
  %ul
    %li
      %p
        %strong(style='height:60px') 60%
      %h3 s
    %li
      %p
        %strong(style='height:25px') 25%
      %h3 n
    %li
      %p
        %strong(style='height:15px') 15%
      %h3 l
  #share_buttons
    %a(href='href="https://twitter.com/share' class='twitter-share-button' data-url='http://bit.ly/tOQOcb' data-text='Guess the name of the next hot startup to get early access before it launches!' data-count='horizontal' data-via='GuessmyStartup') Tweet
    %script(type='text/javascript' src='//platform.twitter.com/widgets.js')
    .fb-like(data-href='http://www.guessmystartup.com/' data-send='true' data-layout='button_count' data-width='50' data-show-faces='false')
    .g-plusone(data-size='medium' data-href='http://www.guesswher.com/')
    %script(type='text/javascript' src='https://apis.google.com/js/plusone.js')
